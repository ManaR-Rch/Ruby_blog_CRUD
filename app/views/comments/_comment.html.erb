<div class="comment">
  <p><strong><%= comment.user.name %></strong> <span class="timestamp"><%= time_ago_in_words(comment.created_at) %> ago</span></p>
  <p><%= comment.body %></p>
  <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
</div>
