<%= form_with(model: @post, local: true, data: { controller: "form", action: "submit->form#submit" }) do |form| %>
  <% if @post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      <ul class="list-disc list-inside text-red-700">
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-5">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-5">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :body, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent min-h-32", placeholder: "Write your post content..." %>
  </div>

  <div class="mb-6">
    <%= form.label :published_at, "Publish Date (leave empty for draft)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.datetime_select :published_at, { include_blank: true }, class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="flex gap-3">
    <%= form.submit "Create Post", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-6 rounded-lg transition" %>
    <%= link_to "Cancel", posts_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2.5 px-6 rounded-lg transition" %>
  </div>
<% end %>
